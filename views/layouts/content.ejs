
<div class="container mt-3">
    <div class="row options" style="height: 40px;">
        <div class="col bg-light d-flex align-items-center rounded-left" style="border: 1px solid #cccccc;">
            <% if (currentUser) { %>
                <button class="btn btn-success btn-sm" onclick="SurveyComponent.showSurveyEditor()"><i class="fa fa-plus" aria-hidden="true"></i> Add Survey</button>
            <% } else { %>
                <i>Sign In to Add Survey</i>
            <% } %>
        </div>
    
        <div class="col-2 bg-info text-white d-flex justify-content-center align-items-center">
            <i class="fa fa-users mr-2"></i>
            <%= usersNumber %>  members
        </div>
    
        <div class="col-2 bg-danger text-white d-flex justify-content-center align-items-center rounded-right">
            <i class="fa fa-file-text mr-2"></i>
            <%= surveysNumber %>  surveys
        </div>
    
    </div>
</div>

<div class="container mt-3 px-0" id="main-content"></div>
